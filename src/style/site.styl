grid-float-breakpoint := 768px


.page-host
  margin-top: 60px

small.date
  float: right

div.container
  position: relative

div.app-bar-upper-right
  position: absolute !important
  top: -7px
  right: 0px
  border: none !important
  left: auto !important
  background-color: transparent !important
  height: auto !important
  width: auto !important
  
  @media (min-width: grid-float-breakpoint)
    top: -3px

.fade-visible
  opacity: 1
  transition: opacity .2s ease-in

.fade-hidden
  opacity: 0
  transition: opacity .2s ease-out


.form-signin
  max-width: 330px
  padding: 15px
  margin: 0 auto
  
  .form-signin-heading,
  .checkbox
    margin-bottom: 10px
  
  .checkbox
    font-weight: normal
  
  .form-control
    position: relative
    height: auto
    box-sizing: border-box
    padding: 10px
    font-size: 16px
    
    &:focus
      z-index: 2
  
    &[type="text"]
      margin-bottom: -1px
      border-bottom-right-radius: 0
      border-bottom-left-radius: 0
    
    &[type="password"]
      margin-bottom: 10px
      border-top-right-radius: 0
      border-top-left-radius: 0

sample
  display: block
  border: 1px solid #ddd
  border-radius: 4px
  margin-top: 10px
  margin-bottom: 20px
  padding: 15px
  
  .preview
    margin-top: 20px

  .well
    padding: 19px
    margin-bottom: 20px
    border: 1px solid #e3e3e3
    border-radius: 4px